    function EditDataBinding(id)
    {
         $.ajax({
            type: "Post",
            url: "/Request/GetMiscellaneousEditData",
            data: { Id: id },
            success: function (data) {
                $("#MiscellaneousTypeEdit").val(data.MType);
                $("#PreferredTypeEdit").val(data.PType);
                $("#AddressEdit").val(data.Address);
                $("#RemarksEdit").val(data.Remarks);
                $("#Reqid").val(id);
                $("#EditMiscellaneousModal").modal();
            }
        });
    }
    function EditSave()
    {
       var MiscellaneousType = $("#MiscellaneousTypeEdit option:selected").val();
        var PreferredType = $("#PreferredTypeEdit option:selected").val();
        var Address = $("#AddressEdit").val();
        var Remarks = $("#RemarksEdit").val();
        var Id=$("#Reqid").val();

        $.ajax({
            type: 'POST',
            url: '@Url.Action("SaveEditMiscellaneous", "Request")',
            data: { Id: Id,MiscellaneousType: MiscellaneousType, PreferredType: PreferredType, Address: Address, Remarks: Remarks,},
            success: function (data) {
                if (data == "") {
                    $("#EditMiscellaneousModal").modal('hide');
                    BindDataTable();
                }
                else {
                    alert(data);
                }            },
            error: function (data)
            {
            }
