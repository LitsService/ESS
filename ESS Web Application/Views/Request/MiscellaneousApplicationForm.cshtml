<script>
    var formdata = new FormData();

    $(document).ready(function () {
        BindDataTable();
        $("#file").on("change", function () {
            var fileInput = document.getElementById('file');
            //Iterating through each files selected in fileInput
            for (i = 0; i < fileInput.files.length; i++) {
                var sfilename = fileInput.files[i].name;
                formdata.append(sfilename, fileInput.files[i]);

            }
            chkatchtbl();
            $('#fileInput').val('');
        });
    });

    function Attachment() {
        $("#file").click();
    }
    function Download(id) {
        $("#PrintId").val(id);
        $("#btnSubmit").click();
    }
    function BindDataTable() {
        $.ajax({
            type: "Post",
            url: "/Request/GetMiscellaneousData",
            success: function (data) {
                $("#MiscellaneousList").DataTable({
                    "lengthChange": true,
                    "pageLength": 25,
                    destroy: true,
                    data: data.History,
                    "lengthChange": false,
                    "filter": false,
                    "columns": [
                        { "data": "RequestId", "autoWidth": true },
                        { "data": "MType", "autoWidth": true },
                        { "data": "RequestDate", "autoWidth": true },
                        { "data": "Employee", "autoWidth": true },
                        { "data": "EmployeeId", "autoWidth": true },
                        { "data": "Language", "autoWidth": true },
                        { "data": "Address", "autoWidth": true },
                        { "data": "Remarks", "autoWidth": true },
                        {
                            render: function (data, type, row) {

                                var html = '<button type="button" onclick="StatusBinding(' + row.RefNo + ')" class="btn btn-sm btn-outline-secondary" title="Open"><i class="fa fa-list"></i></button>   <button type="button" onclick="ShowAttachments(\'' + row.AttachmentGuid + '\',\'Edit\')" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                //if (row.IsEditViisible == true) {
                                //    html += ' <button type="button" onclick="ReimbursementEditDataBinding('+row.Ref+')" class="btn btn-sm btn-outline-secondary" title="Edit"><i class="fa fa-pencil"></i></button>';
                                //}
                                if (row.isSubmitVisible == true) {
                                    html += ' <button type="button" class="btn btn-sm btn-outline-secondary" title="Submit Now!"><i class="fa fa-check"></i></button>';
                                }
                                if (row.isInProcessVisible == true) {
                                    html += ' <button type="button"  class="btn btn-sm btn-outline-secondary" title="Request is in Process"><i class="fa fa-cog"></i></button>';
                                }
                                if (row.isRecallVisible == true) {
                                    html += ' <button type="button" onclick="EditDataBinding(' + row.RefNo + ')" class="btn btn-sm btn-outline-secondary" title="Recall Process"><i class="fa fa-refresh"></i></button>';
                                }
                                if (row.isCompletedVisible == true) {
                                    html += ' <button type="button" class="btn btn-sm btn-outline-secondary" title="Request has been Complete"><i class="fa fa-save"></i></button>';
                                }
                                return html;                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                            }
                        },

                    ]

                });
                if (data.IsApproval == true) {
                    $("#Approvalhidden").prop("hidden", false);
                    $("#ApprovalMiscellaneousList").DataTable({
                        "lengthChange": true,
                        "pageLength": 25,
                        destroy: true,
                        data: data.Approval,
                        "lengthChange": false,
                        "filter": false,
                        "columns": [
                            { "data": "RequestId", "autoWidth": true },
                            { "data": "MType", "autoWidth": true },
                            { "data": "RequestDate", "autoWidth": true },
                            { "data": "Employee", "autoWidth": true },
                            { "data": "EmployeeId", "autoWidth": true },
                            { "data": "Language", "autoWidth": true },
                            { "data": "Address", "autoWidth": true },
                            { "data": "CompanyName", "autoWidth": true },
                            { "data": "Remarks", "autoWidth": true },
                            {
                                render: function (data, type, row) {
                                    var html = '<button type="button" onclick="ShowAttachments(\'' + row.AttachmentGuid + '\',\'Edit\')" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                    html += ' <button onclick="ShowApprove_RejectModal(' + row.RefNo + ',' + row.ReqStatus + ')"  type="button" class="btn btn-sm btn-outline-secondary" title="Approve or Reject"><i class="fa fa-check"></i></button>';
                                    return html;
                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                                }
                            },
                        ]
                    });
                }
            }
        });

    }
    function Save()
    {
        var MiscellaneousType = $("#MiscellaneousType option:selected").val();
        var PreferredType = $("#PreferredType option:selected").val();
        var Opening = $("#Opening").val();
        var Salary = $("#Salary").val();
        var Department = $("#Department").val();
        var Report = $("#Report").val();
        var Address = $("#Address").val();
        var Remarks = $("#Remarks").val();
         var data = new FormData();
        var files = $("#file").get(0).files;
        if (files.length > 0) {
            //data.append("HelpSectionImages", files[0]);
            formdata.append("FormName", "MiscellaneousRequest");
          $.ajax({
                url: '/Request/SaveProfileImage',
                type: "POST",
              processData: false,
              data: formdata,
                dataType: 'json',
                contentType: false,
                success: function (response) {
                    if (response != "Error While Saving." || response != 'No File Saved.')
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("SaveMiscellaneous", "Request")',
                            data: { AtchGuid: response, MiscellaneousType: MiscellaneousType, PreferredType: PreferredType, Opening: Opening, Salary: Salary, Department: Department, Report: Report, Address: Address, Remarks: Remarks },
                            success: function (data) {
                                if (data=="") {
                                    BindDataTable();
                                }
                                else {
                                    alert(data);
                                }
                            },
                            error: function (data)
                            {
                            }
                        });
                    $("#file").val('');
                },
                error: function (er) { }
            });
        }
        else {

            $.ajax({
                            type: 'POST',
                            url: '@Url.Action("SaveMiscellaneous", "Request")',
                            data: { AtchGuid: '', MiscellaneousType: MiscellaneousType, PreferredType: PreferredType, Opening: Opening, Salary: Salary, Department: Department, Report: Report, Address: Address, Remarks: Remarks },
                            success: function (data) {
                                if (data=="") {
                                    BindDataTable();
                                }
                                else {
                                    alert(data);
                                }
                            },
                            error: function (data)
                            {
                            }
                        });
        }
    }
    function StatusBinding(id)
    {
        $.ajax({
