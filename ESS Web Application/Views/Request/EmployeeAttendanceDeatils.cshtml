
@{
    ViewBag.Title = "EmployeeAttendanceDeatils";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Dashboard</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html"><i class="icon-home"></i></a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ul>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="header">
                <h2>Employee Attendance Details</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <div class="col-md-6 col-sm-12">
                        <label>Employee</label>
                        <div class="form-group">
                            <select id="Emp" class="form-control show-tick">
                                <option value="0">Select Employee</option>
                                @foreach (var item in ViewBag.User)
                                {
                                    if (item.Text == "Self")
                                    {
                                        <option selected value="@item.Value">@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label>Start Date</label>
                        <input id="StartDate" type="text" data-provide="datepicker" data-date-autoclose="true" class="form-control">
                    </div>
                    <br />
                    <div class="col-md-6 col-sm-12">
                        <label>End Date</label>
                        <input id="EndDate" type="text" data-provide="datepicker" data-date-autoclose="true" class="form-control" placeholder="To *">
                    </div>
                    <br />
                    <div class="col-12">
                        <button onclick="Search()" type="submit" class="btn btn-primary">Search</button>
                    </div>
                    <br />
                    <div class="table-responsive">

                        <table id="Attendance" class="table table-bordered table-hover table-striped" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>User ID</th>
                                    <th>Employee ID</th>
                                    <th>Name</th>
                                    <th>Department</th>
                                    <th>Date</th>
                                    <th>Check In</th>
                                    <th>CheckOut</th>
                                    <th>Working Hours</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
     function Search() {
        //$('#WorkFlowMappingTable').DataTable({
        //      responsive: true
        //  });
        var EmpId = $("#Emp").val()
        var StartDate = $("#StartDate").val()
        var EndDate = $("#EndDate").val()

        $.ajax({
            type: "Post",
            url: "/Request/GetAttendance",
            data: { StartDate: StartDate, EndDate: EndDate, Emp: EmpId },
            success: function (data) {
                $("#Attendance").DataTable({
                    "lengthChange": true,
                    "pageLength": 25,
                    destroy: true,
                    data: data.History,
                    "lengthChange": false,
                    "filter": false,
                    "columns": [
                        { "data": "UserId", "autoWidth": true },
                        { "data": "EmployeeId", "autoWidth": true },
                        { "data": "Name", "autoWidth": true },
                        { "data": "Department", "autoWidth": true },
                        { "data": "Date", "autoWidth": true },
                        { "data": "CheckIn", "autoWidth": true },
                        { "data": "CheckOut", "autoWidth": true },
                        { "data": "WorkingHours", "autoWidth": true },
                    ]

                });
            }
        });

    }
</script>