<script>
    $(document).ready(function () {
        //$("#User").trigger("change");
        BindDataTable();
        AssetDataBinding('');
    });
    function BindDataTable() {
        $.ajax({
            type: "Post",
            url: "/Request/GetAssetData",
            success: function (data) {
                $("#AssettList").DataTable({
                    "lengthChange": true,
                    "pageLength": 25,
                    destroy: true,
                    data: data.History,
                    "lengthChange": false,
                    "filter": false,
                    "columns": [
                        { "data": "RequestId", "autoWidth": true },
                        { "data": "RequestDate", "autoWidth": true },
                        { "data": "SubmittedBy", "autoWidth": true },
                        { "data": "Remarks", "autoWidth": true },
                        {
                            render: function (data, type, row) {

                                var html = '<button type="button" onclick="StatusBinding(' + row.RefNo + ')" class="btn btn-sm btn-outline-secondary" title="Open"><i class="fa fa-list"></i></button>   <button type="button" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                //if (row.IsEditViisible == true) {
                                //    html += ' <button type="button" onclick="AssetEditDataBinding('+row.Ref+')" class="btn btn-sm btn-outline-secondary" title="Edit"><i class="fa fa-pencil"></i></button>';
                                //}
                                if (row.isSubmitVisible == true) {
                                    html += ' <button type="button" class="btn btn-sm btn-outline-secondary" title="Submit Now!"><i class="fa fa-check"></i></button>';
                                }
                                if (row.isInProcessVisible == true) {
                                    html += ' <button type="button"  class="btn btn-sm btn-outline-secondary" title="Request is in Process"><i class="fa fa-cog"></i></button>';
                                }
                                if (row.isRecallVisible == true) {
                                    html += ' <button type="button" onclick="AssetEditDataBinding(' + row.RefNo + ',1)" class="btn btn-sm btn-outline-secondary" title="Recall Process"><i class="fa fa-refresh"></i></button>';
                                }
                                if (row.isCompletedVisible == true) {
                                    html += ' <button type="button" class="btn btn-sm btn-outline-secondary" title="Request has been Complete"><i class="fa fa-save"></i></button>';
                                }
                                return html;                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                            }
                        },

                    ]

                });
                if (data.IsApproval == true) {
                    $("#Approvalhidden").prop("hidden", false);
                    $("#ApprovalAssetList").DataTable({
                        "lengthChange": true,
                        "pageLength": 25,
                        destroy: true,
                        data: data.Approval,
                        "lengthChange": false,
                        "filter": false,
                        "columns": [
                            { "data": "RequestId", "autoWidth": true },
                            { "data": "RequestDate", "autoWidth": true },
                            { "data": "SubmittedBy", "autoWidth": true },
                            { "data": "CompanyName", "autoWidth": true },
                            { "data": "Remarks", "autoWidth": true },
                            {
                                render: function (data, type, row) {
                                    var html = '<button type="button" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                    html += ' <button onclick="ShowApprove_RejectModal(' + row.RefNo + ',' + row.ReqStatus + ')"  type="button" class="btn btn-sm btn-outline-secondary" title="Approve or Reject"><i class="fa fa-check"></i></button>';
                                    return html;
                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                                }
                            },
                        ]
                    });
                }
            }
        });

    }
    function AssetDataBinding(type) {
        $.ajax({
            type: "Post",
            url: "/Request/GetAssetDataBind",
            success: function (data) {
                var Type = '<option value="0">Select Asset Type</option>';
                var Count = 0;
                if (type == "Edit") {
                    Count = $('#EditrowAsset tbody tr').length;;
                }
                else {
                    Count = $('#addrowAsset tbody tr').length;;
                }
                for (var i = 0; i < data.Type.length; i++) {
                    Type += '<option value="' + data.Type[i].Value + '">' + data.Type[i].Text + '</option>';
                }
                var BindHtml = '';
                if (type == "Edit") {
                     BindHtml = '<tr class="gradeA">' +
                    '<td><select id="TypeEdit_' + Count + '" class="form-control show-tick">' + Type + '</select></td>' +
                    '<td><input id="DescriptionEdit_' + Count + '" type="text" class="form-control"></td>' +
                    '<td class="actions"><button onclick="deleteRow(this)" class="btn btn-sm btn-icon btn-pure btn-default on-editing button-discard" data-toggle="tooltip" data-original-title="Discard"><i class="icon-close" aria-hidden="true"></i></a></td>' +
                    '</tr>';
                    $('#EditrowAsset').append(BindHtml);

                }
                else {
                     BindHtml = '<tr class="gradeA">' +
                    '<td><select id="Type_' + Count + '" class="form-control show-tick">' + Type + '</select></td>' +
                    '<td><input id="Description_' + Count + '" type="text" class="form-control"></td>' +
                    '<td class="actions"><button onclick="deleteRow(this)" class="btn btn-sm btn-icon btn-pure btn-default on-editing button-discard" data-toggle="tooltip" data-original-title="Discard"><i class="icon-close" aria-hidden="true"></i></a></td>' +
                    '</tr>';
                    $('#addrowAsset').append(BindHtml);
                }
            }
        });

    }
    function deleteRow(e) {
        $(e).parents("tr").remove();
    }
    function StatusBinding(id)
    {
        $.ajax({
            type: "Post",
            url: "/Request/GetAssetDetails",
            data: { Id: id },
            success: function (data) {
                $("#StatusAssetModal").modal();

                $("#DetailList").DataTable({
                    "lengthChange": false,
                    "pageLength": 25,
                    destroy: true,
                    data: data,
                    "filter": false,
                    "columns": [
                        { "data": "RequestDate", "autoWidth": true },
                        { "data": "ReqStatus", "autoWidth": true },
                        { "data": "Description", "autoWidth": true },
                        { "data": "Approver", "autoWidth": true },
                        { "data": "ApprovedBy", "autoWidth": true },
                        { "data": "Remarks", "autoWidth": true },
                    ]
                });
            }

        });
    }
    function Save()
    {
        var ForEmp = $("#UserFor option:selected").val();
        var Date = $("#Date").val();
        var Remarks = $("#Remarks").val();

        var TableData;
        TableData = storeTblValues();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("SaveAssetRequest", "Request")',
            data: { EmpFor: ForEmp, RequestDate: Date, List: TableData, Remarks: Remarks},
            success: function (data) {
                if (data=="") {
                    BindDataTable();
                }
                else {
                    alert(data);
                }


            },
            error: function (data)
            {
            }
        });
    }
    function storeTblValues() {
        var TableData = new Array();
        var count = 0;
            $('#addrowAsset tbody tr').each(function (row, tr) {
                TableData[row] = {
                     "AssetType": $("#Type_"+count).val()
                    , "Remarks":$("#Description_"+count).val()
                }
                count = count + 1;
            });
            //TableData.shift();
            return TableData;
    }
    function AssetEditDataBinding(id) {
        $.ajax({
            type: "Post",
            url: "/Request/GetAssetRequestEditData",
            data: {Id:id},
            success: function (data) {
                 $("#UserForEdit").val(data.EmpFor);
                $("#DateEdit").val(data.RequestDate);
                $("#RemarksEdit").val(data.Remarks);
                $("#ReqByEdit").val(data.EmpBy)
                $("#ReqId").val(id);
                $('#EditrowAsset tbody').html("");
                var Type = '<option value="0">Select Asset Type</option>';

                for (var i = 0; i < data.Selected.length; i++) {

                    for (var j = 0; j < data.dropdowns.length; j++) {
                        if (data.dropdowns[j].Value == data.Selected[i].Type) {
                            Type += '<option selected value="' + data.dropdowns[j].Value + '">' + data.dropdowns[j].Text + '</option>';
                        }
                        else {
                            Type += '<option value="' + data.dropdowns[j].Value + '">' + data.dropdowns[j].Text + '</option>';
                        }
                    }
                    var Count = 0;
                var BindHtml = '<tr class="gradeA">' +
                    '<td><select id="TypeEdit_' + Count + '" class="form-control show-tick">' + Type + '</select></td>' +
                    '<td><input id="DescriptionEdit_' + Count + '" value="'+data.Selected[i].Description+'" type="text" class="form-control" ></td>' +
                    '<td class="actions"><button onclick="deleteRow(this)" class="btn btn-sm btn-icon btn-pure btn-default on-editing button-discard" data-toggle="tooltip" data-original-title="Discard"><i class="icon-close" aria-hidden="true"></i></a></td>' +
                    '</tr>';

                    $('#EditrowAsset').append(BindHtml);
                    Count = Count + 1;
                }
                $("#EditReqModal").modal();
            }
        });

    }
    function EditSave()
    {
        var ForEmp = $("#UserForEdit option:selected").val();
        var Date = $("#DateEdit").val();
        var Remarks = $("#RemarksEdit").val();
        var id= $("#ReqId").val();
        var TableData;
        TableData = EditstoreTblValues();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("EditSaveAssetRequest", "Request")',
            data: {Id:id, EmpFor: ForEmp, RequestDate: Date, List: TableData, Remarks: Remarks},
            success: function (data) {
                if (data=="") {
                    BindDataTable();
                }
                else {
                    alert(data);
                }


            },
            error: function (data)
            {
            }
        });
    }
    function EditstoreTblValues() {
        var TableData = new Array();
        var count = 0;
            $('#EditrowAsset tbody tr').each(function (row, tr) {
                TableData[row] = {
                     "AssetType": $("#TypeEdit_"+count).val()
                    , "Remarks":$("#DescriptionEdit_"+count).val()
                }
                count = count + 1;
            });
            //TableData.shift();
            return TableData;
    }
    function ShowApprove_RejectModal(id, statusid)
    {
        $("#Approve_RejectModal").modal();
         $.ajax({
            type: "Post",
            url: "/Request/GetAssetRequestApproval",
            data: { Id: id},
            success: function (data) {
                $("#UserForApproval").val(data.EmpFor);
                $("#DateApproval").val(data.RequestDate);
                $("#RemarksApprovl").val(data.Remarks);
                $("#ReqByApprval").val(data.SubmittedBy)
                $("#ReqIdApproval").val(id);
                $("#CompanyName2").html(data.CompanyName);
                $("#StatusId").val(statusid);
            }
        });
    }
    function Approve_Reject(Type)
    {
         $.ajax({
            type: "Post",
             url: "/Request/SaveAssetApprove_Reject",
             data: { Type: Type, Id: $("#ReqIdApproval").val(), StatusId: $("#StatusId").val(), Remarks:$("#RemarksApproval").val() },
             success: function (data) {
                 $("#Approve_RejectModal").modal('hide');
                 BindDataTable();
            }
        });
    }
</script>
