                                        <th>Department</th>
                                        <th>Date</th>
                                        <th>Check In</th>
                                        <th>CheckOut</th>
                                        <th>Working Hours</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>*@
                </div>

            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("EmployeeDetailReport", "Request", FormMethod.Post, new { target = "_blank" }))
{
    <input type="hidden" id="employeeId" name="EmpId" />
    <input type="submit" class="hidden" id="btnSubmit" hidden value="Export" />
}
<script>
    function Search() {
        if ($("#Emp").val() != undefined && $("#Emp").val() != null ) {
            $("#employeeId").val($("#Emp").val());
            $("#btnSubmit").click();
        } else
            alert("No data Found");
    }
</script>