        }
    }


        function LateandLeaveApplicationDataBinding() {
        var EmpId = $("#searchUser option:selected").val()

        $.ajax({
            type: "Post",
            url: "/Request/GetLateandAbsenceApplicationData",
            data: { EmpId: EmpId },
            success: function (data) {
                $("#LateandLeaveApplicationHistory").DataTable({
                    "lengthChange": true,
                    "pageLength": 25,
                    destroy: true,
                    data: data.History,
                    "lengthChange": false,
                    "filter": false,
                    "columns": [
                        { "data": "RequestID", "autoWidth": true },
                        { "data": "Category", "autoWidth": true },
                        { "data": "SubCategory", "autoWidth": true },
                        { "data": "Date", "autoWidth": true },
                        { "data": "Approver", "autoWidth": true },
                        { "data": "ReqStatus", "autoWidth": true },
                        { "data": "EmployeeId", "autoWidth": true },
                        { "data": "Employee", "autoWidth": true },
                        { "data": "Remarks", "autoWidth": true },
                        {
                            render: function (data, type, row) {
                                return "";
                            }
                        },
                        {
                            render: function (data, type, row) {

                                var html = '<button type="button" onclick="OpenLasteandLeaveDeatils(' + row.RefNo + ')" class="btn btn-sm btn-outline-secondary" title="Open"><i class="fa fa-list"></i></button>   <button type="button" onclick="ShowAttachments(\'' + row.AttachmentGuid + '\',\'Edit\')" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                //if (row.IsEditViisible == true) {
                                //    html += ' <button type="button" onclick="ReimbursementEditDataBinding('+row.Ref+')" class="btn btn-sm btn-outline-secondary" title="Edit"><i class="fa fa-pencil"></i></button>';
                                //}
                                if (row.isSubmitVisible == true) {
                                    html += ' <button type="button" onclick="GetEditData(' + row.RefNo + ')" class="btn btn-sm btn-outline-secondary" title="Submit Now!"><i class="fa fa-check"></i></button>';
                                }
                                if (row.isInProcessVisible == true) {
                                    html += ' <button type="button"  class="btn btn-sm btn-outline-secondary" title="Request is in Process"><i class="fa fa-cog"></i></button>';
                                }
                                if (row.isRecallVisible == true) {
                                    html += ' <button type="button" onclick="GetEditData(' + row.RefNo + ')" class="btn btn-sm btn-outline-secondary" title="Recall Process"><i class="fa fa-refresh"></i></button>';
                                }
                                if (row.isCompletedVisible == true) {
                                    html += ' <button type="button" class="btn btn-sm btn-outline-secondary" title="Request has been Complete"><i class="fa fa-save"></i></button>';
                                }
                                return html;                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                            }
                        },
                    ]

                });
                if (data.IsApproval == true) {
                    $("#Approvalhidden").prop("hidden", false);
                    $("#LeaveApplicationApproval").DataTable({
                        "lengthChange": true,
                        "pageLength": 25,
                        destroy: true,
                        data: data.Approval,
                        "lengthChange": false,
                        "filter": false,
                        "columns": [
                            { "data": "RequestID", "autoWidth": true },
                            { "data": "Category", "autoWidth": true },
                            { "data": "SubCategory", "autoWidth": true },
                            { "data": "Date", "autoWidth": true },
                            { "data": "Employee", "autoWidth": true },
                            { "data": "EmployeeId", "autoWidth": true },
                            { "data": "CompanyName", "autoWidth": true },
                            { "data": "Remarks", "autoWidth": true },
                            {
                                render: function (data, type, row) {

                                    var html = '<button type="button" onclick="ShowAttachments(\'' + row.AttachmentGuid + '\',\'Edit\')" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                    html += ' <button type="button" onclick="ShowApprove_RejectModal(' + row.RefNo + ',' + row.ReqStatus + ')" class="btn btn-sm btn-outline-secondary" title="Approve/Reject"><i class="fa fa-check"></i></button>';
                                    return html;                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                                }
                            },
                        ]

                    });
                }
            }
        });

    }
    function Save() {
        var EmployeeID = $("#Employee option:selected").val();
        var Category = $("#Category option:selected").val();
        var Date = $("#Date").val();
        var PunchIn = $("#PunchIn").val();
        var SubCategory = $("#SubCategory option:selected").val();
        var PunchOut = $("#PunchOut").val();
        var Remarks = $("#Remarks").val();

        var data = new FormData();
        var files = $("#file").get(0).files;
        if (files.length > 0) {
            //data.append("HelpSectionImages", files[0]);
            formdata.append("FormName", "LateandAbsenceJustifications");
            $.ajax({
                url: '/Request/SaveProfileImage',
                type: "POST",
                processData: false,
                data: formdata,
                dataType: 'json',
                contentType: false,
                success: function (response) {
                    if (response != "Error While Saving." || response != 'No File Saved.')
                        $.ajax({
                            type: "Post",
                            url: "/Request/SaveLateandLeaveRequest",
                            data: { AtchGuid: response, EmployeeID: EmployeeID, Category: Category, Date: Date, PunchIn: PunchIn, PunchOut: PunchOut, SubCategory: SubCategory, Remarks: Remarks },
                            success: function (data) {
                                if (data != "") {
                                    alert(data);
                                }
                                location.reload(true);
                                LateandLeaveApplicationDataBinding();
                            }
                        });
                    $("#file").val('');
                },
                error: function (er) { }

            });
        }
        else {

            $.ajax({
                type: "Post",
                url: "/Request/SaveLateandLeaveRequest",
                data: { AtchGuid: '', EmployeeID: EmployeeID, Category: Category, Date: Date, PunchIn: PunchIn, PunchOut: PunchOut, SubCategory: SubCategory, Remarks: Remarks },
                success: function (data) {
                    if (data != "") {
                        alert(data);
                    }
                    location.reload(true);
                    LateandLeaveApplicationDataBinding();
                }
            });
        }
    }
    function OpenLasteandLeaveDeatils(id) {
        $.ajax({
            type: "Post",
            url: "/Request/GetLateandLeaveDetails",
            data: { Id: id },
            success: function (data) {
                $("#LateandLeaveDetailListModal").modal();

                $("#LasteandLeaveDetailList").DataTable({
                    "lengthChange": false,
                    "pageLength": 25,
                    destroy: true,
                    data: data,
                    "filter": false,
                    "columns": [
                        { "data": "Date", "autoWidth": true },
                        { "data": "ReqStatus", "autoWidth": true },
                        { "data": "Description", "autoWidth": true },
                        { "data": "Approver", "autoWidth": true },
                        { "data": "ApprovedBy", "autoWidth": true },
                        { "data": "Remarks", "autoWidth": true },
                    ]
                });
            }

        });
    }
    function ShowHide(e) {
        var SelectValue = $("#" + e.id + " option:selected").val()
        if (SelectValue == "Punch - in/out") {
            $("#ShowPunch").prop("hidden", false);
            $("#ShowSubCat").prop("hidden", true);
        }
        else if (SelectValue == "Late/Early justification") {

            $("#ShowPunch").prop("hidden", true);
            $("#ShowSubCat").prop("hidden", false);
        }
        else {

            $("#ShowPunch").prop("hidden", true);
            $("#ShowSubCat").prop("hidden", true);
        }
    }
    function GetEditData(id) {
        $.ajax({
            type: "Post",
            url: "/Request/GetEmployeeLateandAbsenceEditData",
            data: { Id: id },
            success: function (data) {
                $("#Reqid").val(id);
                $("#EmployeeEdit").val(data.EmployeeId);
                $("#CategoryEdit").val(data.Category);
                $("#CategoryEdit").trigger("change");
                $("#DateEdit").val(data.Date);
                $("#PunchInEdit").val(data.PunchIn);
                $("#SubCategoryEdit").val(data.SubCategory);
                $("#PunchOutEdit").val(data.PunchOut);
                $("#RemarksEdit").val(data.Remarks);
                $("#EditLasteandAbsenceModal").modal();
            }
        });
    }
    function SaveEdit() {
        var EmployeeID = $("#EmployeeEdit option:selected").val();
        var Category = $("#CategoryEdit option:selected").val();
        var Date = $("#DateEdit").val();
        var PunchIn = $("#PunchInEdit").val();
        var SubCategory = $("#SubCategoryEdit option:selected").val();
        var PunchOut = $("#PunchOutEdit").val();
        var Remarks = $("#RemarksEdit").val();
        var Id = $("#Reqid").val();
        $.ajax({
            type: "Post",
            url: "/Request/EditSaveLateandLeaveRequest",
            data: { Id: Id, EmployeeID: EmployeeID, Category: Category, Date: Date, PunchIn: PunchIn, PunchOut: PunchOut, SubCategory: SubCategory, Remarks: Remarks },
            success: function (data) {
                if (data != "") {
                    alert(data);
                }
                LateandLeaveApplicationDataBinding();
            }
        });
    }
    function ShowHideEdit(e) {
        var SelectValue = $("#" + e.id + " option:selected").val()
        if (SelectValue == "Punch - in/out") {
            $("#ShowPunchEdit").prop("hidden", false);
            $("#ShowSubCatEdit").prop("hidden", true);
        }
        else if (SelectValue == "Late/Early justification") {

            $("#ShowPunchEdit").prop("hidden", true);
            $("#ShowSubCatEdit").prop("hidden", false);
        }
        else {

            $("#ShowPunchEdit").prop("hidden", true);
            $("#ShowSubCatEdit").prop("hidden", true);
        }
    }
    function ShowApprove_RejectModal(id, statusid) {
        $("#Approve_RejectModal").modal();
        $.ajax({
            type: "Post",
            url: "/Request/GetLateandAbsenceApproval",
            data: { Id: id },
            success: function (data) {
                $("#EmployeeApproval").html(data.Employee);
                $("#RemarkHistory").html(data.History);
                $("#ReqIdApproval").val(id);
                $("#CompanyName2").html(data.CompanyName);
                $("#StatusId").val(statusid);
            }
        });
    }
    function Approve_Reject(Type) {
        $.ajax({
            type: "Post",
            url: "/Request/SaveLeaveandAbsenceApprove_Reject",
            data: { Type: Type, Id: $("#ReqIdApproval").val(), StatusId: $("#StatusId").val(), Remarks: $("#RemarksApproval").val() },
            success: function (data) {
                $("#Approve_RejectModal").modal('hide');
                location.reload(true);
                BindDataTable();
            }
        });
    }
    function ShowAttachments(DocNumbers, Types) {
        if (Types == 'Edit') {
            $("#file").hide();
        }
        else {
            $("#file").show();
        }
        $.ajax({
            type: "Post",
            url: "/Request/LoadUploadedFiles",
            data: { DocType: 'LateandAbsenceJustifications', DocNumber: DocNumbers },
            success: function (data) {
                $("#ShowAttachmentsList").DataTable({
                    "lengthChange": true,
                    "pageLength": 10,
                    destroy: true,
                    data: data,
                    "lengthChange": false,
                    "filter": false,
                    "columns": [
                        { "data": "Name", "autoWidth": true },
                        { "data": "Remarks", "autoWidth": true },
                        {
                            render: function (data, type, row) {

                                var html = '<button type="button" onclick="Download(\'' + row.DOCID + '\')" class="btn btn-sm btn-outline-secondary" title="Download"><i class="fa fa-download"></i></button>';
                                return html;
                            }
                        },
                    ]

                });
                $("#ShowAttachmentsModal").modal();

            }
        });

    }

