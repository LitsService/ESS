@using (Html.BeginForm("DownloadReport", "Request", FormMethod.Post))
{
    <input type="hidden" id="PrintId" name="DocName" />
    <input type="submit" class="hidden" hidden id="btnSubmit" />
}
<script>
    var formdata = new FormData();

    $(document).ready(function () {
        BindDataTable();
        $("#file").on("change", function () {
            var fileInput = document.getElementById('file');
            for (i = 0; i < fileInput.files.length; i++) {
                var sfilename = fileInput.files[i].name;
                formdata.append(sfilename, fileInput.files[i]);
            }
            chkatchtbl();
            $('#fileInput').val('');
        });
    });

    function Attachment() {
        $("#file").click();
    }
    function Download(id) {
        $("#PrintId").val(id);
        $("#btnSubmit").click();
    }
    function ShowAttachments(DocNumbers, Types) {
        if (Types == 'Edit') {
            $("#file").hide();
        }
        else {
            $("#file").show();
        }
        $.ajax({
            type: "Post",
            url: "/Request/LoadUploadedFiles",
            data: { DocType: 'EmployeeDetailForm', DocNumber: DocNumbers },
            success: function (data) {
                $("#ShowAttachmentsList").DataTable({
                    "lengthChange": true,
                    "pageLength": 10,
                    destroy: true,
                    data: data,
                    "lengthChange": false,
                    "filter": false,
                    "columns": [
                        { "data": "Name", "autoWidth": true },
                        { "data": "Remarks", "autoWidth": true },
                        {
                            render: function (data, type, row) {

                                var html = '<button type="button" onclick="Download(\'' + row.DOCID + '\')" class="btn btn-sm btn-outline-secondary" title="Download"><i class="fa fa-download"></i></button>';
                                return html;
                            }
                        },
                    ]

                });
                $("#ShowAttachmentsModal").modal();

            }
        });

    }
    function PrintReport(reqId) {
        if (reqId != undefined && reqId != null) {
            $("#PrintId").val(reqId);
            $("#btnSubmit").click();
        } else
            alert("No data Found");
    }
    function BindDataTable() {
        $.ajax({
            type: "Post",
            url: "/Request/GetEmployeeDetailData",
            success: function (data) {
                $("#BankLetterList").DataTable({
                    "lengthChange": true,
                    "pageLength": 25,
                    destroy: true,
                    data: data.History,
                    "lengthChange": false,
                    "filter": false,
                    "columns": [
                        { "data": "RequestId", "autoWidth": true },
                        { "data": "RequestDate", "autoWidth": true },
                        { "data": "Employee", "autoWidth": true },
                        { "data": "EmployeeId", "autoWidth": true },
                        { "data": "ContactDetail", "autoWidth": true },
                        { "data": "LastName", "autoWidth": true },
                        { "data": "EmployeeAddress", "autoWidth": true },
                        { "data": "ReqStatus", "autoWidth": true },
                        {
                            render: function (data, type, row) {

                                var html = '<button type="button" onclick="StatusBinding(' + row.RefNo + ')" class="btn btn-sm btn-outline-secondary" title="Open"><i class="fa fa-list"></i></button><button type="button" onclick="ShowAttachments(\'' + row.AttachmentGuid + '\',\'Edit\')" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                if (row.isSubmitVisible == true) {
                                    html += ' <button type="button" class="btn btn-sm btn-outline-secondary" title="Submit Now!"><i class="fa fa-check"></i></button>';
                                }
                                if (row.isInProcessVisible == true) {
                                    html += ' <button type="button"  class="btn btn-sm btn-outline-secondary" title="Request is in Process"><i class="fa fa-cog"></i></button>';
                                }
                                if (row.isRecallVisible == true) {
                                    html += ' <button type="button" onclick="EditDataBinding(' + row.RefNo + ')" class="btn btn-sm btn-outline-secondary" title="Recall Process"><i class="fa fa-refresh"></i></button>';
                                }
                                if (row.isCompletedVisible == true) {
                                    html += '<button type="button" class="btn btn-sm btn-outline-secondary" title="Request has been Complete"><i class="fa fa-save"></i></button>';
                                }
                                return html;
                            }
                        },

                    ]

                });
                if (data.IsApproval == true) {
                    $("#Approvalhidden").prop("hidden", false);
                    $("#ApprovalBankLetterList").DataTable({
                        "lengthChange": true,
                        "pageLength": 25,
                        destroy: true,
                        data: data.Approval,
                        "lengthChange": false,
                        "filter": false,
                        "columns": [
                            { "data": "RequestId", "autoWidth": true },
                            { "data": "RequestDate", "autoWidth": true },
                            { "data": "Employee", "autoWidth": true },
                            { "data": "EmployeeId", "autoWidth": true },
                            { "data": "ContactDetail", "autoWidth": true },
                            { "data": "LastName", "autoWidth": true },
                            { "data": "EmployeeAddress", "autoWidth": true },
                            { "data": "CompanyName", "autoWidth": true },
                            {
                                render: function (data, type, row) {
                                    var html = '<button type="button" onclick="ShowAttachments(\'' + row.AttachmentGuid + '\',\'Edit\')" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                    html += ' <button onclick="ShowApprove_RejectModal(' + row.RefNo + ',' + row.ReqStatus + ')"  type="button" class="btn btn-sm btn-outline-secondary" title="Approve or Reject"><i class="fa fa-check"></i></button>';
                                    return html;
                                }
                            },
                        ]
                    });
                }
                if (data.ProfileImage != null)
                $(".imgFromScript").attr("src", data.ProfileImage);
            }
        });

    }

    function Save() {
        var EmployeeID = $("#User option:selected").val();
        var ContactDetail = $("#ContactDetail").val();
        var LastName = $("#LastName").val();
        var EmployeeAddress = $("#EmployeeAddress").val();
        var MatrialStatus=  $("input[name='gender']:checked").val();
        var files = $("#file").get(0).files;
        if (files.length > 0) {
            var data = new FormData();
            data = formdata;
            formdata.append("FormName", "EmployeeDetailForm");

            $.ajax({
                url: '/Request/SaveProfileImage',
                type: "POST",
                contentType: false,
                processData: false,
                data: formdata,
                async: false,
                //dataType: 'json',
                success: function (response) {
                    if (response != "Error While Saving." || response != 'No File Saved.')
                        $.ajax({
                            type: "Post",
                            url: "/Request/SaveEmployeeDetail",
                            data: { AtchGuid: response, EmployeeID: EmployeeID, ContactDetail: ContactDetail, LastName: LastName, MatrialStatus: MatrialStatus, EmployeeAddress: EmployeeAddress},
                            success: function (data) {
                                if (data != "") {
                                    alert(data);
                                }
                                LeaveApplicationDataBinding();
                                location.reload(true);
                                $("#User").val("");
                               $("#User option:selected").val("");
                                $("#ContactDetail").val("");
                               $("#LastName").val("");
                                $("#EmployeeAddress").val("");
                            }
                        });
                    $("#file").val('');
                },
                error: function (er) { }

            });


        }
        else {
            $.ajax({
                type: "Post",
                url: "/Request/SaveEmployeeDetail",
                data: { AtchGuid: '', EmployeeID: EmployeeID, ContactDetail: ContactDetail, LastName: LastName, MatrialStatus: MatrialStatus, EmployeeAddress: EmployeeAddress},
                success: function (data) {
                    if (data != "") {
                        alert(data);
                    } location.reload(true);
                    LeaveApplicationDataBinding();
                }
            });
        }
    }
    function StatusBinding(id)
    {
        $.ajax({
            type: "Post",
            url: "/Request/GetEmployeeDetailDetails",
            data: { Id: id },
            success: function (data) {
                $("#StatusBankLetterModal").modal();
                $("#StatusBankLetter").DataTable({
                    "lengthChange": false,
                    "pageLength": 25,
                    destroy: true,
                    data: data,
                    "filter": false,
                    "columns": [
                        { "data": "RequestDate", "autoWidth": true },
                        { "data": "ReqStatus", "autoWidth": true },
                        { "data": "Description", "autoWidth": true },
                        { "data": "Approver", "autoWidth": true },
                        { "data": "ApprovedBy", "autoWidth": true },
                    ]
                });
            }

        });
    }
    function EditDataBinding(id)
    {
         $.ajax({
            type: "Post",
             url: "/Request/GetEmployeeDetailEditData",
            data: { Id: id },
             success: function (data) {
                 $("#ContactDetailEdit").val(data.ContactDetail);
                 $("#LastNameEdit").val(data.LastName);
                 $("#EmployeeAddressEdit").val(data.EmployeeAddress);
                $("#Reqid").val(id);
                $("#EditBankLetterModal").modal();
            }
        });
    }
    function EditSave()
    {
        var EmployeeID = $("#UserEdit option:selected").val();
        var ContactDetail = $("#ContactDetailEdit").val();
        var LastName = $("#LastNameEdit").val();
        var EmployeeAddress = $("#EmployeeAddressEdit").val();
        var MatrialStatus = $("input[name='gender']:checked").val();
        var Id=$("#Reqid").val();

        $.ajax({
            type: 'POST',
            url: '@Url.Action("SaveEditEmployeeDetail", "Request")',
            data: { Id: Id, EmployeeID: EmployeeID, ContactDetail: ContactDetail, LastName: LastName, MatrialStatus: MatrialStatus, EmployeeAddress: EmployeeAddress},
            success: function (data) {
                if (data != "") {
                    alert(data);
                }
                BindDataTable();
                $("#EditBankLetterModal").modal('hide');
                   },
            error: function (data)
            {
            }
        });
    }

    function ShowApprove_RejectModal(id, statusid)
    {
        $("#Approve_RejectModal").modal();
         $.ajax({
            type: "Post",
             url: "/Request/GetEmployeeDetailApproval",
            data: { Id: id},
            success: function (data) {
                $("#EmployeeApproval").html(data.Employee);
                $("#ContactDetailApproval").html(data.ContactDetail);
                $("#LastNameApproval").html(data.LastName);
                $("#EmployeeAddressApproval").html(data.EmployeeAddress);
                $("#CompanyName2").html(data.CompanyName);
                $("#RemarkHistory").html(data.History);
                $("#ReqIdApproval").val(id);
                $("#StatusId").val(statusid);
            }
        });
    }
    function Approve_Reject(Type)
    {
         $.ajax({
            type: "Post",
             url: "/Request/SaveEmployeeDetailApprove_Reject",
             data: { Type: Type, Id: $("#ReqIdApproval").val(), StatusId: $("#StatusId").val(), Remarks:$("#RemarksApproval").val() },
             success: function (data) {
                 $("#Approve_RejectModal").modal('hide');
                 location.reload(true);
                 BindDataTable();
            }
        });
    }

</script>





