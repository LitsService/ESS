    });
    function GetEmployeeDetails(e) {
        $.ajax({
            type: "Post",
            url: "/Request/GetEmployeeDetails",
            data: { SelectUserId: e.value },
            success: function (data) {
                $("#EmpName").text(data.Name);
                $("#EmpDesg").text(data.Designation);
                $("#EmpID").text(data.EmpID);
                $("#EmpNation").text(data.Nationality);
                $("#EmpDept").text(data.Department);
                $("#EmpAdd").text(data.Address);
                $("#EmpPhone").text(data.Phone);
                $("#EmpEmail").text(data.Email);
            }
        });
    }

    function LoanDataBinding(type) {
        var Count = $('#addrowLoan tbody tr').length;
        var BindHtml = '<tr class="gradeA">' +
            '<td><input id="Date_' + Count + '" type="text" data-provide="datepicker" data-date-autoclose="true" class="form-control"></td>' +
            '<td><input id="Amount_' + Count + '" type="text" class="form-control" placeholder="Amount"></td>' +
            '<td><input id="Remarks_' + Count + '" type="text" class="form-control" placeholder="Remarks"></td>' +
            '<td class="actions"><button onclick="deleteRow(this)" class="btn btn-sm btn-icon btn-pure btn-default on-editing button-discard" data-toggle="tooltip" data-original-title="Discard"><i class="icon-close" aria-hidden="true"></i></a></td>' +
            '</tr>';
        if (type == "Edit") {
            $('#EditrowLoan').append(BindHtml);
        }
        else {
            $('#addrowLoan').append(BindHtml);
        }
    }

    function deleteRow(e) {
        $(e).parents("tr").remove();
    }

    function GetInstallments(e) {
        $("#Installments").html("");
        $.ajax({
            type: "Post",
            url: "/Request/GetInstallments",
            data: { LoanType: e.value },
            success: function (data) {
                var installment = '<option value="0">Select Installment</option>';
                for (var i = 0; i < data.length; i++) {
                    installment += '<option value="' + data[i].Value + '">' + data[i].Text + '</option>';
                }
                $("#Installments").html(installment);
            }
        });
    }

    function BindDataTable() {
        $.ajax({
            type: "Post",
            url: "/Request/GetLoanData",
            success: function (data) {
                $("#LoanList").DataTable({
                    "lengthChange": true,
                    "pageLength": 25,
                    destroy: true,
                    data: data.History,
                    "lengthChange": false,
                    "filter": false,
                    "columns": [
                        { "data": "RequestID", "autoWidth": true },
                        { "data": "LoanType", "autoWidth": true },
                        { "data": "RequestDate", "autoWidth": true },
                        { "data": "Employee", "autoWidth": true },
                        { "data": "EmployeeId", "autoWidth": true },
                        { "data": "ExpectedDate", "autoWidth": true },
                        { "data": "Amount", "autoWidth": true },
                        { "data": "Installments", "autoWidth": true },
                        { "data": "Remarks", "autoWidth": true },
                        {
                            render: function (data, type, row) {

                                return "<a href='#' onclick='ShowDetails(" + row.Ref + ")'>Show Detail</a>";
                            }
                        },
                        {
                            render: function (data, type, row) {

                                var html = '<button type="button" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                //if (row.IsEditViisible == true) {
                                //    html += ' <button type="button" onclick="ReimbursementEditDataBinding('+row.Ref+')" class="btn btn-sm btn-outline-secondary" title="Edit"><i class="fa fa-pencil"></i></button>';
                                //}
                                if (row.isSubmitVisible == true) {
                                    html += ' <button type="button" class="btn btn-sm btn-outline-secondary" title="Submit Now!"><i class="fa fa-check"></i></button>';
                                }
                                if (row.isInProcessVisible == true) {
                                    html += ' <button type="button"  class="btn btn-sm btn-outline-secondary" title="Request is in Process"><i class="fa fa-cog"></i></button>';
                                }
                                if (row.isRecallVisible == true) {
                                    html += ' <button type="button" onclick="EditDataBinding(' + row.RefNo + ')" class="btn btn-sm btn-outline-secondary" title="Recall Process"><i class="fa fa-refresh"></i></button>';
                                }
                                if (row.isCompletedVisible == true) {
                                    html += ' <button type="button" class="btn btn-sm btn-outline-secondary" title="Request has been Complete"><i class="fa fa-save"></i></button>';
                                }
                                return html;                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                            }
                        },

                    ]

                });
                if (data.IsApproval == true) {
                    $("#Approvalhidden").prop("hidden", false);
                    $("#ApprovalLoanList").DataTable({
                        "lengthChange": true,
                        "pageLength": 25,
                        destroy: true,
                        data: data.Approval,
                        "lengthChange": false,
                        "filter": false,
                        "columns": [
                            { "data": "RequestID", "autoWidth": true },
                            { "data": "LoanType", "autoWidth": true },
                            { "data": "RequestDate", "autoWidth": true },
                            { "data": "Employee", "autoWidth": true },
                            { "data": "EmployeeId", "autoWidth": true },
                            { "data": "ExpectedDate", "autoWidth": true },
                            { "data": "Amount", "autoWidth": true },
                            { "data": "Installments", "autoWidth": true },
                            { "data": "CompanyName", "autoWidth": true },
                            { "data": "Remarks", "autoWidth": true },
                            {
                                render: function (data, type, row) {
                                    var html = '<button type="button" class="btn btn-sm btn-outline-secondary" title="Attachement"><i class="fa fa-paperclip"></i></button>';
                                    html += ' <button onclick="ShowApprove_RejectModal(' + row.RefNo + ',' + row.ReqStatus + ')"  type="button" class="btn btn-sm btn-outline-secondary" title="Approve or Reject"><i class="fa fa-check"></i></button>';
                                    return html;
                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                                }
                            },
                        ]
                    });
                }
                if (data.ProfileImage != null)
                    $(".imgFromScript").attr("src", data.ProfileImage);
            }
        });

    }

    function Save()
    {
        var Emp = $("#User option:selected").val();
        var Type = $("#LoanType").val();
        var Amount = $("#LoanAmount").val();
        var Installments = $("#Installments").val();

        var TableData;
        TableData = storeTblValues();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("SaveLoanApplication", "Request")',
            data: { Emp: Emp, Type: Type, Amount: Amount, Installments: Installments, LModle: TableData },
            success: function (data) {
                if (data=="") {
                    BindDataTable();
                }
                else {
                    alert(data);
                }


            },
            error: function (data)
            {
            }
        });
    }

    function storeTblValues() {
        var TableData = new Array();
        var count = 0;
            $('#addrowLoan tbody tr').each(function (row, tr) {
                TableData[row] = {
                     "Date": $("#Date_"+count).val()
                    , "Amount": $("#Amount_"+count).val()
                    , "Remarks":$("#Remarks_"+count).val()
                }
                count = count + 1;
            });
            //TableData.shift();
            return TableData;
    }

    function EditDataBinding(id)
