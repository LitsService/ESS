        var id = $("#ReqId").val();
        var User=$("#UserEdit").val();
        var Type=$("#LoanTypeEdit").val();
        var Amount=$("#LoanAmountEdit").val();
        var Installment=$("#InstallmentsEdit").val();
        var Date=$("#DateEdit").val();
        var Remarks=$("#RemarksEdit").val();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("SaveEditLoan", "Request")',
            data: { Id: id, User: User, Type: Type, Amount: Amount, Installment: Installment, Date: Date, Remarks: Remarks },
            success: function (data) {
                if (data == "") {
                    $("#EditReqModal").modal('hide');
                    BindDataTable();
                }
                else {
                    alert(data);
                }            },
            error: function (data)
            {
            }
        });
    }

