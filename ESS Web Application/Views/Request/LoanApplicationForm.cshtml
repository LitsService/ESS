         $.ajax({
            type: "Post",
            url: "/Request/GetLoanEditData",
            data: { Id: id },
            success: function (data) {
                $("#UserEdit").val(data.Employee);
                $("#LoanTypeEdit").val(data.Type);
                GetSelectedEditInstallments(data.Type, data.Installment);
                $("#LoanAmountEdit").val(data.Amount);
                $("#InstallmentsEdit").val(data.Installment);
                $("#DateEdit").val(data.Date);
                $("#RemarksEdit").val(data.Remarks);
                $("#ReqId").val(data.Id);
                $("#EditReqModal").modal();
            }
        });
    }

    function GetEditInstallments(e) {
        $("#InstallmentsEdit").html("");
        $.ajax({
            type: "Post",
            url: "/Request/GetInstallments",
            data: { LoanType: e.value },
            success: function (data) {
                var installment = '<option value="0">Select Installment</option>';
                for (var i = 0; i < data.length; i++) {
                    installment += '<option value="' + data[i].Value + '">' + data[i].Text + '</option>';
                }
                $("#InstallmentsEdit").html(installment);
            }
        });
    }
    function GetSelectedEditInstallments(e,select) {
        $("#InstallmentsEdit").html("");
        $.ajax({
            type: "Post",
            url: "/Request/GetInstallments",
            data: { LoanType: e },
            success: function (data) {
                var installment = '<option value="0">Select Installment</option>';
                for (var i = 0; i < data.length; i++) {
                    if (data[i].Value == select) {
                        installment += '<option selected value="' + data[i].Value + '">' + data[i].Text + '</option>';
                    }
                    else {
                        installment += '<option value="' + data[i].Value + '">' + data[i].Text + '</option>';
                    }
                }
                $("#InstallmentsEdit").html(installment);
            }
        });
    }
    function EditSave()
