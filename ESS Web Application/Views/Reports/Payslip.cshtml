
@{
    ViewBag.Title = "Payslip";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Dashboard</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html"><i class="icon-home"></i></a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ul>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="header">
                <h2>Payslip</h2>
            </div>
            <div class="body">
                <div class="tab-content">
                    <div class="row">
                        <div class="col-lg-8 col-md-8">
                            <div class="card">
                                <div class="table-responsive">
                                    <table id="Earning" class="table table-bordered table-hover table-striped" cellspacing="0">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Earning</th>
                                                <th>Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                    <table id="Deduction" class="table table-bordered table-hover table-striped" cellspacing="0">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>Deductons</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="card col-md-4 col-lg-4">
                            <div class="card">
                                <div class="form-group">
                                    <select id="Emp" onchange="DateChange(this)" class="form-control show-tick">
                                        <option value="0">Check Date</option>
                                        <option value="">
                                            1-jan-2020 to 31-jan-2020
                                        </option>
                                        <option value="">1-Feb-2020 to 29-Feb-2020</option>
                                        <option value="">1-Mar-2020 to 31-Mar-2020</option>
                                        <option value="">1-Apr-2020 to 30-Apr-2020</option>
                                        <option value="">1-May-2020 to 31-May-2020</option>
                                        <option value="">1-June-2020 to 30-Jun-2020</option>
                                        <option value="">1-Jul-2020 to 31-Jul-2020</option>
                                        <option value="">1-Aug-2020 to 31-Aug-2020</option>
                                        <option value="">1-Sep-2020 to 31-Sep-2020</option>
                                        <option value="">1-Oct-2020 to 31-Oct-2020</option>
                                        <option value="">1-Nov-2020 to 30-Nov-2020</option>
                                        <option value="">1-Dec-2020 to 31-Dec-2020</option>

                                    </select>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function DateChange(e) {
        //var Date = e.value;

        var HTML = "";
        HTML += "<tr><td>Basic Salary</td><td>7000</td></tr><tr><td>Accomodation</td><td>3000</td></tr><tr><td>Allowance</td><td>2000</td></tr><tr><td>Reimbursement</td><td>-</td></tr><tr><td>Annual Ticket</td><td>-</td></tr><tr><td>Bonus</td><td>-</td></tr><tr><td>Gross Pay Total</td><td>12000</td></tr>"
        $("#Earning tbody").html(HTML);

        HTML = "";
        HTML += "<tr><td>Deduction Percentage</td><td>-</td></tr><tr><td>Loan</td><td>-</td></tr><tr><td>Advance Salary</td><td>-</td></tr><tr><td>Net Pay Total</td><td>12000</td></tr>"
        $("#Deduction tbody").html(HTML);
    }
</script>
