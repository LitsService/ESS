            BindDataTable();

    });
    function BindDataTable() {
            $.ajax({
                type: "Post",
                url: "/Workflows/GetWorkFlows",
                //data: { Employee: Employee, RoleId: Rolieid },
                success: function (data) {
                    $("#WorkFlows").DataTable({
                        "lengthChange": true,
                        "pageLength": 25,
                        destroy: true,
                        data: data,
                        "lengthChange": false,
                        "filter": false,
                        "columns": [
                            { "data": "Name", "autoWidth": true },
                            { "data": "Description", "autoWidth": true },
                            { "data": "FormType", "autoWidth": true },
                            {
                                render: function (data, type, row) {
                                    if (row.IsActive == true) {
                                        return '<i class="icon-check" aria-hidden="true"></i>'
                                    }
                                    else {
                                        return '';//'<i class="fa fa-close" aria-hidden="true"></i>'
                                    }
                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                                }
                            },
                            {
                                render: function (data, type, row) {
                                    return '<button type="button" onclick="OpenSubWorkFlowListModal(' + row.ID + ')" class="btn btn-sm btn-outline-secondary" title="Open"><i class="fa fa-list"></i></button>  <button type="button" onclick="OpenModal(' + row.ID + ',\'' + row.Name + '\',\'' + row.FormTypeId + '\', ' + row.IsActive + ',\'' + row.Description + '\',\'' + row.HrEmployeeId +'\')" class="btn btn-sm btn-outline-secondary" title="Edit"><i class="fa fa-edit"></i></button>  <button type="button" onclick="DeleteWorkFlow(' + row.ID + ')" class="btn btn-sm btn-outline-danger js-sweetalert" title="Delete" data-type="confirm"><i class="fa fa-trash-o"></i></button>';
                                    //< label class="label-100" id = "Cycle_' + row.ScheduleId + '" > ' + row.CycleTime + '</label >
                                }
                            },

                        ]

                    });
                }
            });

    }
    function OpenModal(id, Name, TypeId, IsActive,Description,EmployeeId)
    {
            $("#Name").val("");
            $("#IsActive").prop("checked", false);
            $("#Description").val("");
        $("#FormType").html("");
        $("#HrEmail").html("");
            $("#ID").val("");
            if (id == '0') {
                $("#defaultModalLabel").html("ADD RECORD");
                $.ajax({
                    type: "Post",
                    url: "/Workflows/GetFormType",
                    data: { Type: 'New' },
                    success: function (data) {
                        var FormType = '';
                        for (var i = 0; i < data.length; i++) {
                            FormType += '<option value="' + data[i].Value + '">' + data[i].Text + '</option>';
                        }
                        $("#FormType").html(FormType);
                    }
                });
                $.ajax({
                    type: "Post",
                    url: "/Workflows/GetHr",
                    data: { Type: 'New' },
                    success: function (data) {
                        var Hr = '';
                        for (var i = 0; i < data.length; i++) {
                            Hr += '<option value="' + data[i].Value + '">' + data[i].Text + '</option>';
                        }
                        $("#HrEmail").html(Hr);
                    }
                });
                $("#defaultModal").modal();

            }
            else {
                $("#defaultModalLabel").html("EDIT RECORD");
                $("#Description").val(Description);
                $("#ID").val(id);
                $.ajax({
                    type: "Post",
                    url: "/Workflows/GetFormType",
                    data: { Type: 'Update' },
                    success: function (data) {
                        var FormType = '';
                        for (var i = 0; i < data.length; i++) {

                            if (data[i].Value == TypeId) {
                                FormType += '<option selected="selected" value="' + data[i].Value + '">' + data[i].Text + '</option>';
                               
                            }
                            else {
                                FormType += '<option value="' + data[i].Value + '">' + data[i].Text + '</option>';
                            }
                        }
                        $("#FormType").html(FormType);
                        $("#FormType").trigger("change");
                        $("#Name").val(Name);
                        $("#IsActive").prop("checked", IsActive);
                    }
                });
                $.ajax({
                    type: "Post",
                    url: "/Workflows/GetHr",
                    data: { Type: 'Update' },
                    success: function (data) {
                        var Hr = '';
                        for (var i = 0; i < data.length; i++) {

                            if (data[i].Value == EmployeeId) {
                                Hr += '<option selected="selected" value="' + data[i].Value + '">' + data[i].Text + '</option>';
                                $("#IsEmail").prop("checked", true);
                            }
                            else {
                                Hr += '<option value="' + data[i].Value + '">' + data[i].Text + '</option>';
                            }
                        }
                        $("#HrEmail").html(Hr);
                    }
                });
                $("#defaultModal").modal();

            }
        }
    function Add_UpdateWorkFlow() {
            var ID = $("#ID").val();
            var FormType = $("#FormType option:selected").val();
            var Name = $("#Name").val();
            var Description = $("#Description").val();
        var IsActive = $("#IsActive").val();
        var IsEmail = $("#IsEmail").val();
        var HrNotification = "";
        if (IsEmail=="on") {
            HrNotification = $("#HrEmail option:selected").val();
        }

            $.ajax({
                type: "Post",
                url: "/Workflows/WorkFlowInsertUpdate",
                data: { Operation: "Insert", FormType: FormType, Name: Name, ID: ID, Description: Description, IsActive: IsActive, HrNotification: HrNotification},
                success: function (result) {
                                        $("#defaultModal").modal('hide');
                    BindDataTable();
                }
            });

    }
    function DeleteWorkFlow(id)
    {
        $("#WorkFlowId").val(id);
            $("#WorkFlowDeleteModal").modal();
    }
    function WorkFlowDeleteConfirm() {
            var WorkFlowId = $("#WorkFlowId").val();
            $.ajax({
                type: "Post",
                url: "/Workflows/DeleteWorkFlow",
                data: { ID: WorkFlowId },
                success: function (userid) {
                    $("#WorkFlowDeleteModal").modal('hide');
                    BindDataTable();
                }
            });
        }
